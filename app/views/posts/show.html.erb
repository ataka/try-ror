<p id="notice"><%= notice %></p>

<p>
  <b><%= t('name') %>:</b>
  <%= @post.name %>
</p>

<p>
  <b><%= t('title') %>:</b>
  <%= @post.title %>
</p>

<p>
  <b><%= t('content') %>:</b>
  <%= @post.content %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<h2><%= t('comments') %></h2>
<%= render @post.comments %>

<h2><%= t('add_comment') %>:</h2>
<%= render "comments/form" %>

<%= link_to t('edit'), edit_post_path(@post) %> |
<%= link_to t('back'), posts_path %>

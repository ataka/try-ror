<div class="blogbar">
  <%= link_to t('blog.post.new'), new_post_path %> |
  <%= link_to t('nav.home'), "/" %>  :||
</div>

<h1>Weblog</h1>

<div class="results">
  <% @search.each_hit_with_result do |hit, post| %>
  <div class="result">
	<h2><%= post.title %></h2>
	<p><%= post.content %></p>
  </div>
  <% end %>
</div>  
<div class="pagination">
  <%= will_paginate(@search.results) %>
</div>
	 
</div>

<% @posts.each do |post| %>
<div class="entry_container">
  <h2 class="entry_title"><%= link_to post.title, post %></h2>
  <div class="entry_content">
    <%= post.content %>
  </div>
  <div class="entry_footer">
    <%= post.name %> |
    <%= link_to t('blog.post.edit'), edit_post_path(post) %> |
    <%= link_to t('blog.post.destroy'), post, method: :delete, data: { confirm: t('confirm') } %>
  </div>
</div>
<% end %>
